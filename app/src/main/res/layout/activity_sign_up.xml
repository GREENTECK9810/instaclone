<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/instalogo"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_instagram_logo"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_below="@+id/instalogo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittextshape"
        android:layout_marginTop="30dp"
        android:paddingLeft="16dp"
        android:textAppearance="@style/regular_text"
        android:hint="Email address"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittextshape"
        android:layout_marginTop="18dp"
        android:paddingLeft="16dp"
        android:textAppearance="@style/regular_text"
        android:hint="Full name" />

    <EditText
        android:id="@+id/username"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittextshape"
        android:layout_marginTop="18dp"
        android:paddingLeft="16dp"
        android:textAppearance="@style/regular_text"
        android:hint="Username"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittextshape"
        android:layout_marginTop="18dp"
        android:paddingLeft="16dp"
        android:textAppearance="@style/regular_text"
        android:hint="Password"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/register"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_below="@+id/password"
        android:background="@drawable/login_signup_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Sign up"
        android:textAppearance="@style/regular_text"
        android:textColor="@color/white"
        android:stateListAnimator="@null"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login"
        android:textAppearance="@style/regular_text"
        android:textSize="16dp"
        android:textColor="@color/lightblack"
        android:layout_toRightOf="@+id/already"
        android:layout_below="@+id/register"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>